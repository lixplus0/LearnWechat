  padding-top: 20px;
}

.info-area .section {
  padding: 10px;
  margin-bottom: 20px;
  background-color: #fff;
}

.flex-wrp {
  display: flex;
  flex-direction: row;
}

.info-title {
  font-size: 15px;
  font-weight: bold;
