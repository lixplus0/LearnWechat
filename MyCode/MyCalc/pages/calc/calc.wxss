.content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    background-color: darkgray;
}

.layout-top {
    margin-bottom: 20rpx;
    text-align: right;
    width: 100%;
    line-height: 220rpx;
    padding: 0 10rpx;
    font-weight: bold;
    font-size: 60px;
    box-sizing: border-box;
    border-top: 1px solid #fff;
}

.layout-main {
    width: 100%;
}

.btn-group {
    display: flex;
    flex-direction: row;
    flex: 1;
    width: 100%;
    height: 5rem;
    background-color: white;
}

.item {
    width: 25%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 1px;
    margin-right: 1px;
}

.item:active {
    background-color: #ff0000;
}

.orange {
    color: #fef4e9;
    background: #f78d1d;
    font-weight: bold;
}

.blue {
    color: #d9eef7;
    background-color: #0095cd;
}

.zero {
    margin-left: 1px;
    width: 50%;
}